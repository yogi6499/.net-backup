@model IEnumerable<MS3.PresentationLayer.Models.StudentModel>

@{
    ViewBag.Title = "DisplayStudent";
}

<h2>DisplayStudent</h2>

<p>
    @Html.ActionLink("Create New", "AddStudent", "Student");
</p>
<table class="table" style="border: 1px solid red; padding: 0px;margin:5px">
    <tr style="background-color:black;color:white">
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DOB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNumer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>

        <th></th>
    </tr>

    @foreach (MS3.PresentationLayer.Models.StudentModel item in Model)
    {
        using (Html.BeginForm("Delete","Student", new { id = item.Id },FormMethod.Post))
        {
            <tr style="background-color:gray;color:black">
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Name
                </td>
                <td>
                    @item.DOB
                </td>
                <td>
                    @item.ContactNumer
                </td>
                <td>
                    @item.Address
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Assign Staff", "AssignStaff", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id },new { @class="btn btn-primary"})
                </td>
            </tr>
        }
    }

</table>
@*onclick="return confirm('Are you sure you want to delete Id of @item.Id');"*@